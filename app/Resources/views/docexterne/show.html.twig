{% extends 'base.html.twig' %}

{% block body %}
    <h1>Docexterne</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ docExterne.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ docExterne.url }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ docExterne.alt }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ docExterne.titre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ docExterne.slug }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if docExterne.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_docexterne_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_docexterne_edit', { 'id': docExterne.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
