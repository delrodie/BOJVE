{% extends 'BOLayout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('ressources/vendor/css/layout.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<!-- BEGIN BREADCRUMBS -->
<div class="breadcrumbs">
    <h1>Statistiques</h1>
    <ol class="breadcrumb">
        <li>
            <a href="#">Accueil</a>
        </li>
        <li class="active">Tableau de bord</li>
    </ol>
</div>
<!-- END BREADCRUMBS -->
<!-- BEGIN PAGE BASE CONTENT -->
<div class="row">
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Projets</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-green icon-bulb"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-subtitle"></span>
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="{{ nombreProjet }}">0</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Publications internes</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-green icon-bulb"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-subtitle"></span>
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="{{ nombrePublicationInterne }}">0</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Publications externes</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-green icon-bulb"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-subtitle"></span>
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="{{ nombrePublicationExterne }}">0</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Albums</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-green icon-bulb"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-subtitle"></span>
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="{{ nombreAlbums }}">0</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>

</div>


<!-- END PAGE BASE CONTENT -->

{% endblock %}


{% block javascripts %}
  {{ parent() }}
  <!-- BEGIN PAGE LEVEL PLUGINS -->
  <script src="{{ asset('ressources/vendor/js/moment.min.js')}}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/daterangepicker.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/morris.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/raphael-min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/jquery.waypoints.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/jquery.counterup.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/fullcalendar.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/horizontal-timeline.js')}}" type="text/javascript"></script>

  <!-- END PAGE LEVEL PLUGINS -->
  <!-- BEGIN PAGE LEVEL SCRIPTS -->
  <script src="{{ asset('ressources/vendor/js/dashboard.min.js')}}" type="text/javascript"></script>
  <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
