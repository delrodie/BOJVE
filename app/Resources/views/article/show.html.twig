{% extends 'BOLayout.html.twig' %}

{% block title %}
  {{ parent() }}
  Modification d'un article "{{ article.titre }}"
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('ressources/vendor/css/blog.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<!-- BEGIN BREADCRUMBS -->
<div class="breadcrumbs">
  <h1>Articles</h1>
  <ol class="breadcrumb">
    <li>
      <a href="{{ path('homepage')}}">Accueil</a>
    </li>
    <li>
      <a href="{{ path('admin_article_index')}}">Articles</a>
    </li>
    <li class="active">Modification</li>
  </ol>
  <!-- Sidebar Toggle Button -->
  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".page-sidebar">
    <span class="sr-only">Toggle navigation</span>
    <span class="toggle-icon">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </span>
  </button>
  <!-- Sidebar Toggle Button -->
  </div>
  <!-- END BREADCRUMBS -->
  <!-- BEGIN SIDEBAR CONTENT LAYOUT -->
  <div class="page-content-container">
    <div class="page-content-row">
    <!-- BEGIN PAGE SIDEBAR -->
    <div class="page-sidebar">
      <nav class="navbar" role="navigation"></nav>
    </div>
    <!-- END PAGE SIDEBAR -->
    <div class="page-content-col">
      <!-- BEGIN PAGE BASE CONTENT -->
      <div class="blog-page blog-content-2">
        <div class="row">
          <div class="col-lg-9">
            <div class="blog-single-content bordered blog-container">
              <div class="blog-single-head">
                <h1 class="blog-single-head-title">{{ article.titre }}</h1>
                <div class="blog-single-head-date">
                  <i class="icon-calendar font-blue"></i>
                  <a href="javascript:;">{% if article.publicationAt %}{{ article.publicationAt|date('Y-m-d') }}{% endif %}</a>
                </div>
              </div>
              <br>
              <div class="blog-single-img">
                {% if article.image %}
                    <img src="{{ asset('uploads/' ~ article.image.id ~ '.' ~ article.image.url )}}" alt="{{ article.titre }}" class="img-thumbnail" />
                {% else %}
                    <img id="blah" src="{{ asset('favicon.ico')}}" alt="JVE Côte d'Ivoire - {{ article.titre }}" class="img-thumbnail" />
                {% endif %}
              </div>
              <div class="blog-single-desc">
                <p style="font-style:italic; font-weight:bold;">{{ article.resume }}</p>
                {{ article.contenu|raw }}
              </div>


            </div>
          </div>
          <div class="col-lg-3">
          <div class="blog-single-sidebar bordered blog-container">

          <div class="blog-single-sidebar-tags">
          <h3 class="blog-sidebar-title uppercase">Mots clés</h3>
            <div class="">
              {{ article.resume }}
            </div>
          </div>

          </div>
          </div>
        </div>
      </div>
    <!-- END PAGE BASE CONTENT -->
    </div>
  </div>
</div>
<!-- END SIDEBAR CONTENT LAYOUT -->

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <!-- BEGIN PAGE LEVEL PLUGINS -->
  <script src="{{ asset('ressources/vendor/js/form/select2.full.min.js')}}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/jquery.validate.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/additional-methods.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/bootstrap-datepicker.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/form/form-validation.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
  <!--<script src="//cdn.ckeditor.com/4.5.11/standard/ckeditor.js"></script>-->

  <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}
