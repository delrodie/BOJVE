{% extends 'base.html.twig' %}

{% block body %}
    <h1>Imgprojets list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Alt</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for imgProjet in imgProjets %}
            <tr>
                <td><a href="{{ path('admin_imgprojet_show', { 'id': imgProjet.id }) }}">{{ imgProjet.id }}</a></td>
                <td>{{ imgProjet.url }}</td>
                <td>{{ imgProjet.alt }}</td>
                <td>{% if imgProjet.statut %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_imgprojet_show', { 'id': imgProjet.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_imgprojet_edit', { 'id': imgProjet.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_imgprojet_new') }}">Create a new imgProjet</a>
        </li>
    </ul>
{% endblock %}
